<div class="row">
  <div class="col-md-6">
    <h1>Sites</h1>
  </div>
  <div class="col-md-6 m-t-20">
    <%= link_to 'Sync', sites_sync_path, class: "btn btn-success pull-right", id: "sync_btn"%>
    <%= link_to 'New Site', new_site_path, class: "btn btn-primary pull-right m-r-5" %>
  </div>
</div>


<table data-classes="table table responsive" data-toggle="table" data-search='true' data-sort-name="status" data-sort-order="asc">
  <thead>
    <tr>
      <th data-sortable="true">Name</th>
      <th data-sortable="true">Domain</th>
      <th data-sortable="true">Port</th>
      <th data-sortable ="true"  data-field="status">Status</th>
      <th>Manage</th>
    </tr>
  </thead>

  <tbody>
    <% @contexts.each do |context| %>
      <tr>
        <td><%= context[:site].name %></td>
        <td><%= context[:site].domain %></td>
        <td><%= context[:site].port %></td>
        <td>
          <% if context[:need_update] %>
            <i class="fa fa-frown-o fa-2x" aria-hidden="true"></i>
          <% else %>
            <i class="fa fa-smile-o fa-2x" aria-hidden="true"></i>
          <% end %>
        </td>
        <td><%= link_to 'Show', context[:site] , class: "btn btn-primary btn-sm" %> <%= link_to 'Edit', edit_site_path(context[:site]), class: "btn btn-info btn-sm" %> <%= link_to 'Destroy', context[:site], method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
