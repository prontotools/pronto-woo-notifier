<%= form_for(site) do |f| %>
    <%= render 'shared/error_messages', site: site %>
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>

    <%= f.label :domain %>
    <%= f.text_field :domain, class: 'form-control' %>

    <%= f.label :port %>
    <%= f.text_field :port, class: 'form-control' %>

    <%= f.submit class: "btn btn-primary" %>
<% end %>
